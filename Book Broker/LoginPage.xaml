<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Book_Broker.LoginPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource Layer2}">
            <Label Text="Login Page!" TextColor="{StaticResource MainText}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="UsernameEntry" Placeholder="Username..." PlaceholderColor="{StaticResource SubText}" TextColor="{StaticResource MainText}"/>
            <Entry x:Name="PasswordEntry" Placeholder="Password..." IsPassword="True" PlaceholderColor="{StaticResource SubText}" TextColor="{StaticResource MainText}"/>
            <Button x:Name="LoginButton" Text="Login" Clicked="LoginButton_Clicked" TextColor="{StaticResource MainText}" BackgroundColor="{StaticResource Layer4}"/>
            <Button x:Name="BackButton" Text="Back" Clicked="BackButton_Clicked" TextColor="{StaticResource MainText}" BackgroundColor="{StaticResource Layer4}"/>
            <Button x:Name="ShowPasswordButton" Text="Show Password" Clicked="ShowPasswordButton_Clicked" TextColor="{StaticResource MainText}" BackgroundColor="{StaticResource Layer4}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>